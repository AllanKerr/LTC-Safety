<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/detailedConcern_fieldPadding">

    <TextView
        android:id="@+id/detailedConcern_key"
        android:textSize="@dimen/detailedConcern_infoTextSize"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/detailedConcern_value"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailedConcern_key"
        android:layout_alignParentStart="true"/>

</RelativeLayout>